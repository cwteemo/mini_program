@import "../../assets/styles/common.wxss";

.container {
  min-height: 100vh;
  background-color: #f4f4f4;
  padding: 0;
  font-family: 'Helvetica Neue', sans-serif;
}

.header {
  background: linear-gradient(135deg, #07c160, #0aad56);
  padding: 40rpx 30rpx;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  display: block;
  text-align: center;
}

.menu-section {
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.menu-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0;
  width: 100%;
}

.menu-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  padding-left: 10rpx;
}

.btn-wrapper {
  padding-right: 10rpx;
}

.add-btn {
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  line-height: 1.5;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}

.food-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  width: 100%;
}

.food-card {
  position: relative;
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  min-height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.food-card:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.food-name {
  font-size: 30rpx;
  color: #333;
  text-align: center;
  padding-right: 30rpx;
  line-height: 1.4;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-weight: bold;
}

.delete-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 40rpx;
  opacity: 0.7;
  transition: all 0.2s ease;
}

.delete-btn:active {
  opacity: 1;
  transform: scale(0.9);
}

.empty-tip {
  grid-column: 1 / -1;
  text-align: center;
  color: #999;
  font-size: 30rpx;
  padding: 80rpx 0;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.empty-tip::before {
  content: "üìù";
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.random-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160, #0aad56);
  color: white;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.random-btn:active {
  transform: translateX(-50%) scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
}

.food-list {
  background-color: white;
  border-radius: 12rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.food-item {
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.food-item:last-child {
  border-bottom: none;
}

.food-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.food-actions {
  display: flex;
  align-items: center;
}

.delete-icon {
  width: 36rpx;
  height: 36rpx;
  padding: 10rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.list-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.add-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.food-items {
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 20rpx;
}

.food-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.food-content:active .food-name {
  color: #07c160;
  transform: translateX(4rpx);
}

